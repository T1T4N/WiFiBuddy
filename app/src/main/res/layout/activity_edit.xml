<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.titantech.wifibuddy.controllers.EditActivity">

    <include layout="@layout/app_toolbar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/app_toolbar">

        <com.sothree.slidinguppanel.SlidingDownPanelLayout
            android:id="@+id/slidingLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <fragment
                    android:id="@+id/map_edit"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    class="com.google.android.gms.maps.MapFragment" />
            </FrameLayout>

            <RelativeLayout
                android:id="@+id/edit_layout_main"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="150dp"
                android:background="@android:color/white"
                >
                <LinearLayout
                    android:id="@+id/edit_layout_name"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">
                    <TextView
                        android:id="@+id/edit_label_name"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:labelFor="@+id/edit_field_name"
                        android:text="AP Name:"
                        android:textColor="@color/dark_grey"
                        android:textSize="16sp"/>
                    <EditText
                        android:id="@+id/edit_field_name"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight=".6"
                        android:inputType="text"
                        android:textSize="16sp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/edit_layout_bssid"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edit_layout_name"
                    android:weightSum="1">
                    <TextView
                        android:id="@+id/edit_label_bssid"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:labelFor="@+id/edit_field_bssid"
                        android:text="AP Id:"
                        android:textColor="@color/dark_grey"
                        android:textSize="16sp"/>
                    <EditText
                        android:id="@+id/edit_field_bssid"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight=".6"
                        android:enabled="false"
                        android:inputType="text"
                        android:textSize="16sp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/edit_layout_password"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edit_layout_bssid"
                    android:weightSum="1">
                    <TextView
                        android:id="@+id/edit_label_password"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:labelFor="@+id/edit_field_password"
                        android:text="Password"
                        android:textColor="@color/dark_grey"
                        android:textSize="16sp"/>
                    <EditText
                        android:id="@+id/edit_field_password"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight=".6"
                        android:inputType="textPassword"
                        android:textSize="16sp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/edit_layout_privacy"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edit_layout_password"
                    android:weightSum="1">
                    <TextView
                        android:id="@+id/edit_label_privacy"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:labelFor="@+id/edit_field_password"
                        android:text="Privacy"
                        android:textColor="@color/dark_grey"
                        android:textSize="16sp"/>
                    <Spinner
                        android:id="@+id/edit_field_privacy"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight=".6"
                        android:textSize="16sp"
                        />
                </LinearLayout>
            </RelativeLayout>
        </com.sothree.slidinguppanel.SlidingDownPanelLayout>
    </RelativeLayout>
</RelativeLayout>